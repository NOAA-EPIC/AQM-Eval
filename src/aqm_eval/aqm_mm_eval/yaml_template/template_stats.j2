# This template is used to generate control_stats.yaml for MM application. Airnow surface observation is set as default.
analysis:
  start_time: {{ start_time }} # yyyy-mm-dd-HH:MM:SS UTC
  end_time: {{ end_time }} # yyyy-mm-dd-HH:MM:SS UTC
  output_dir: {{ output_dir }}
  debug: {{ debug_option }}
  read:
    paired:
      method: {{ paired_format }}
      filenames: {{ paired_dataset }}

{% include "mm_model_defns.j2" %}

obs:
  {{ obs_label }}: # obs label
    use_airnow: True
    filename: {{ obs_file }}
    obs_type: pt_sfc
    variables: {{ obs_variables }}

stats:
  stat_list: {{ stats_score_list }}
  round_output: 3
  output_table: {{ stats_table_option }}
  output_table_kwargs: {{ stats_table_kwargs }}
  domain_type: {{ stats_domain_type }}
  domain_name: {{ stats_domain_name }}
  data: {{ stats_dataset }}
