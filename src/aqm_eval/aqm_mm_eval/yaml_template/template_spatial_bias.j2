# This template is used to generate control_spatial_bias.yaml for MM application. Airnow surface observation is set as default.
{% include "mm_analysis.j2" %}

{% include "mm_model_defns.j2" %}
obs:
  {{ obs_label }}: # obs label
    use_airnow: True
    filename: {{ obs_file }}
    obs_type: pt_sfc
    variables: {{ obs_variables }}

plots:
  pg3:
    type: "spatial_bias"
    fig_kwargs: {{ spatial_bias_fig_kwargs }}
    text_kwargs: {{ spatial_bias_text_kwargs }}
    domain_type: {{ spatial_bias_domain_type }}
    domain_name: {{ spatial_bias_domain_name }}
    data: {{ spatial_bias_dataset }}
    data_proc: {{ spatial_bias_data_proc }}
