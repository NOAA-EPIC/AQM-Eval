# This template is used to generate control_csi.yaml for MM application. Airnow surface observation is set as default.
analysis:
  start_time: {{ start_time }} # yyyy-mm-dd-HH:MM:SS UTC
  end_time: {{ end_time }} # yyyy-mm-dd-HH:MM:SS UTC
  output_dir: {{ output_dir }}
  debug: {{ debug_option }}
  read:
    paired:
      method: {{ paired_format }}
      filenames: {{ paired_dataset }}

{% include "mm_model_defns.j2" %}

obs:
  {{ obs_label }}: # obs label
    use_airnow: True
    filename: {{ obs_file }}
    obs_type: pt_sfc
    variables: {{ obs_variables }}

plots:
  pg8:
    type: "csi"
    fig_kwargs: {{ csi_fig_kwargs }}
    text_kwargs: {{ csi_text_kwargs }}
    domain_type: {{ csi_domain_type }}
    domain_name: {{ csi_domain_name }}
    threshold_list: {{ csi_threshold }}
    score_name: {{ csi_score }}
    data: {{ csi_dataset }}
    model_name_list: {{ csi_dataset_label }}
    data_proc: {{ csi_data_proc }}
