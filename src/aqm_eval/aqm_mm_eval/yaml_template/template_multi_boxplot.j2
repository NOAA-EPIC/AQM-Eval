# This template is used to generate control_boxplot.yaml for MM application. Airnow surface observation is set as default.
analysis:
  start_time: {{ start_time }} # yyyy-mm-dd-HH:MM:SS UTC
  end_time: {{ end_time }} # yyyy-mm-dd-HH:MM:SS UTC
  output_dir: {{ output_dir }}
  debug: {{ debug_option }}
  read:
    paired:
      method: {{ paired_format }}
      filenames: {{ paired_dataset }}

model:
  {{ model_eval_label }}: # model label
   files: {{ model_eval_files }}
   mod_type: {{ model_eval_type }}
   mod_kwargs: {{ model_eval_kwargs }}
   radius_of_influence: {{ model_eval_radius}}
   mapping:
     {{ obs_label }}: {{ model_eval_mapping }}
   variables: {{ model_eval_variables }}
   projection: {{ model_eval_projection }}
   plot_kwargs: {{ model_eval_plot_kwargs }}
{% if model_base_label is defined %}
  {{ model_base_label }}: # model label
   files: {{ model_base_files }}
   mod_type: {{ model_base_type }}
   mod_kwargs: {{ model_base_kwargs }}
   radius_of_influence: {{ model_base_radius}}
   mapping:
     {{ obs_label }}: {{ model_base_mapping }}
   variables: {{ model_base_variables }}
   projection: {{ model_base_projection }}
   plot_kwargs: {{ model_base_plot_kwargs }}
{% endif %}
obs:
  {{ obs_label }}: # obs label
    use_airnow: True
    filename: {{ obs_file }}
    obs_type: pt_sfc
    variables: {{ obs_variables }}

plots:
  pg6:
    type: "multi_boxplot"
    fig_kwargs: {{ multi_boxplot_fig_kwargs }}
    text_kwargs: {{ multi_boxplot_text_kwargs }}
    domain_type: {{ multi_boxplot_domain_type }}
    domain_name: {{ multi_boxplot_domain_name }}
    region_name: {{ multi_boxplot_region_type }}
    region_list: {{ multi_boxplot_region_name }}
    urban_rural_name: {{ multi_boxplot_urban_rural_name }}
    urban_rural_differentiate_value: {{ multi_boxplot_urban_rural_value}}
    better_or_worse_method: {{ multi_boxplot_eval_method }}
    data: {{ multi_boxplot_dataset }}
    model_name_list: {{ multi_boxplot_dataset_label }}
    data_proc: {{ multi_boxplot_data_proc }}
