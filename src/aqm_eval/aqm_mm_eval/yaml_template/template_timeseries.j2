# This template is used to generate control_timeseries.yaml for MM application. Airnow surface observation is set as default.  
analysis:
  start_time: {{ start_time }} # yyyy-mm-dd-HH:MM:SS UTC
  end_time: {{ end_time }} # yyyy-mm-dd-HH:MM:SS UTC
  output_dir: {{ output_dir }}
  debug: {{ debug_option }}
  read:
    paired:
      method: {{ paired_format }}
      filenames: {{ paired_dataset }}

model:
  {{ model_eval_label }}: # model label
   files: {{ model_eval_files }}
   mod_type: {{ model_eval_type }}
   mod_kwargs: {{ model_eval_kwargs }}
   radius_of_influence: {{ model_eval_radius}}
   mapping:
     {{ obs_label }}: {{ model_eval_mapping }}
   variables: {{ model_eval_variables }}
   projection: {{ model_eval_projection }}
   plot_kwargs: {{ model_eval_plot_kwargs }}

obs:
  {{ obs_label }}: # obs label
    use_airnow: True
    filename: {{ obs_file }}
    obs_type: pt_sfc
    variables: {{ obs_variables }}

plots:
  pg1:
    type: "timeseries"
    fig_kwargs: {{ timeseries_fig_kwargs }}
    default_plot_kwargs: {{ timeseries_plot_kwargs }}
    text_kwargs: {{ timeseries_text_kwargs }}
    domain_type: {{ timeseries_domain_type }}
    domain_name: {{ timeseries_domain_name }}
    data: {{ timeseries_dataset }}
    data_proc: {{ timeseries_data_proc }}
